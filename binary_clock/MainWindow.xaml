<Window x:Class="binary_clock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:binary_clock"
        mc:Ignorable="d"
        Title="binary_clock"
        Icon="resources\clock_black.ico"
        Width="798"
        Height="472"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        MouseUp="Window_MouseUp"
        MouseMove="Window_MouseMove"
        MouseLeave="Window_MouseLeave">

    <Window.Resources>
        <Style TargetType="Border"
               x:Key="DisplayBorder">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="Background" Value="#484848" />
        </Style>

        <Style TargetType="Rectangle"
               x:Key="BorderRectangle">
            <Setter Property="Width" Value="70" />
            <Setter Property="Height" Value="70" />
            <Setter Property="Fill" Value="#e0e0e0" />
        </Style>
    </Window.Resources>
    
    <Border BorderThickness="1"
            BorderBrush="White">
        <Grid x:Name="mainGrid"
              Background="#212121">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label x:Name="labelTitle"
                   Grid.Column="0"
                   Height="30"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Foreground="White"
                   FontSize="15"
                   Content="binary__clock" />
            <Button x:Name="buttonExit"
                    Grid.Column="2"
                    Width="30"
                    Height="30"
                    Background="Crimson"
                    Foreground="White"
                    FontSize="15"
                    Content="X"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="buttonExit_Click"
                    MouseEnter="buttonExit_MouseEnter"
                    MouseLeave="buttonExit_MouseLeave" />
            <Grid Grid.Column="0"
                  x:Name="hours"
                  Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0"
                        Grid.Row="2"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="h02"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="0"
                        Grid.Row="3"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="h03"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="0"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="h10"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="1"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="h11"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="2"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="h12"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="3"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="h13"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
            </Grid>
            <Grid Grid.Column="1"
                  x:Name="minutes"
                  Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0"
                        Grid.Row="1"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m01"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="0"
                        Grid.Row="2"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m02"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="0"
                        Grid.Row="3"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m03"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="0"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m10"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="1"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m11"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="2"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m12"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="3"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="m13"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
            </Grid>
            <Grid Grid.Column="2"
                  x:Name="seconds"
                  Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Column="0"
                        Grid.Row="1"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s01"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="0"
                        Grid.Row="2"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s02"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="0"
                        Grid.Row="3"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s03"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="0"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s10"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="1"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s11"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="2"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s12"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
                <Border Grid.Column="1"
                        Grid.Row="3"
                        Style="{StaticResource DisplayBorder}">
                    <Rectangle x:Name="s13"
                               Style="{StaticResource BorderRectangle}" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
